<h1>Rotten Mangoes<h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<%= form_tag(movies_path, method: :get)  do  %>
<div>
  <%= label_tag :title %><br/>
  <%= text_field_tag :title %>
</div>
<div>
  <%= label_tag :director %><br/>
  <%= text_field_tag :director %>
</div>
<div>
  <%= label_tag :duration %><br/>
  <%= select_tag :duration,options_for_select([["Under 90 minutes","s"
],["90 minutes to 120 minutes","m"],["Over 120 minutes","l"],["All","all"]])%>
</div>
  <%= submit_tag "Go!", :name => nil  %>
 <% end %>
<% @movies.each do |movie| %>

  <%= link_to image_tag(movie.image.thumb.url),movie_path(movie)%>
  <h2><%= link_to movie.title,movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes </h4>
  <p> <%= movie.description %></p>
  <p><%= movie.review_average %>/10</p>
  <hr>
<% end %>
