<% if !@verify %>
  <h1>Wrong Password</h1>
<% end %>

<h3><span class="label label-default">You must login to view songs</span></h3>

<form style="margin-top:2%" class="form-horizontal" method="post" action="/users/login">
  <div class="form-group">
    <label class="col-sm-1 control-label">Username:</label>
    <div class="col-sm-10">
    <input type="string" class="form-control" placeholder="username" name="username">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">Password:</label>
    <div class="col-sm-10">
    <input type="string" class="form-control" name="password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-default" value="Submit">Submit</button>
    </div>
    </div>
</form>
