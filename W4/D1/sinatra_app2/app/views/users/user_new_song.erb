
<% if @song && @song.errors.any? %>
  <div>
    <strog>Some issues with your song, please fix them:</strog>
    <ul>
      <% @song.errors.full_messages.each do |song|%>
      <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form style="margin-top:2%" class="form-horizontal" method="post" action="/users/add_new_song">
  <div class="form-group">
    <label class="col-sm-1 control-label">Artist:</label>
    <div class="col-sm-10">
    <input type="text" class="form-control" placeholder="artist name" name="artist" value="<%= @song && @song.artist%>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">title:</label>
    <div class="col-sm-10">
    <input type="text" class="form-control" name="title" value="<%= @song && @song.title%>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">URL:</label>
    <div class="col-sm-10">
    <input type="text" class="form-control" name="url" value="<%= @song && @song.url %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-default" value="Submit">Submit</button>
    </div>
    </div>
</form>